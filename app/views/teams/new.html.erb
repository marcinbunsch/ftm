<h1>Nowa drużyna</h1>
<% if show_page_info? %>
	<div id="page-info">
		Przy pomocy tej strony możesz dodać nową drużynę.
	</div>
<% end %>
<% form_for(@team) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "Nazwa" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "Opis" %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label "Miejscowość" %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label "Rok założenia" %><br />
    <%= f.date_select :year_founded, :start_year => 1900, :end_year => Date.today.year,
			:discard_day => true, :discard_month => true %>
  </p>
	
  <p>
    <%= f.submit 'Dodaj' %>
		<%= f.submit 'Dodaj i kontynuuj', :name => 'continue' %>
  </p>
<% end %>
<%= link_to 'Anuluj', teams_path %>

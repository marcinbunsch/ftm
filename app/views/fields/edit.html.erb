<h1>Edycja boiska</h1>
<% if show_page_info? %>
  <div id="page-info">
    Przy pomocy tej strony możesz edytować informacje o boisku.
  </div>
<% end %>

<% form_for(@field) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label 'Nazwa' %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label 'Opis' %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Zapisz' %>
  </p>
<% end %>

<%= link_to 'Anuluj', fields_path %>

<h1>Nowy zawodnik</h1>
<% if show_page_info? %>
	<div id="page-info">
		Przy pomocy tej strony możesz dodać nowego zawodnika.
	</div>
<% end %>


<% form_for([@user, @player], :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "Nazwisko" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "Imię" %><br />
    <%= f.text_field :first_name %>
  </p>
	<p>
		<%= f.label "Drużyna" %><br />
		<%= f.select :team_id, @teams %>
	</p>
  <p>
    <%= f.label "Numer na koszulce" %><br />
    <%= f.text_field :current_number %>
  </p>
  <p>
    <%= f.label "Pozycja na boisku" %><br />
    <%= f.select :position_id, @positions %>
  </p>
  <p>
    <%= f.label "Opis" %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label "Data urodzenia" %><br />
    <%= f.date_select :date_of_birth, :start_year => 1910,
			:end_year => Date.today.year, :use_month_numbers => true %>
  </p>
	<p>
		<%= f.label "Dodaj zdjęcie" %><br />
		<%= file_field_tag "avatar[uploaded_data]" %>
	</p>
  <p>
    <%= f.submit 'Dodaj' %>
		<%= f.submit 'Dodaj i kontynuuj', :name => 'continue' %>
  </p>
<% end %>

<%= link_to 'Anuluj', user_players_path(@user) %>

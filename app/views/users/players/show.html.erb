<%= show_page_info "Ta strona przedstawia szczegółowe informacje o zawodniku." %>

<div id='player-details'>

	<p>
		Karta zawodnika: <%=h @player.full_name %>
		<% if @player.team %>
			(<%= link_to h(@player.team.name), user_team_path(@user, @player.team) %>)
		<% end %>
	</p>
	
	<div id='avatar'>
		<%= render :partial => 'avatar', :object => @player %>
	</div> <!-- .avatar -->
	
	<p>
	  <b>Numer na koszulce:</b>
	  <%=h @player.current_number %>
	</p>
	
	<p>
	  <b>Pozycja na boisku:</b>
	  <%=h @player.position ? @player.position.description : 'Brak' %>
	</p>
	
	<p>
	  <b>Opis:</b>
	  <%=h @player.description %>
	</p>
	
	<p>
	  <b>Data urodzenia:</b>
	  <%=h @player.date_of_birth %>
	</p>
	
</div> <!-- #player-details -->

<%= link_to 'Edytuj', edit_user_player_path(@user, @player) %> |
<%= link_to 'Lista zawodników', user_players_path(@user) %>

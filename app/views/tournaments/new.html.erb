<h1>Nowy turniej</h1>
<% if show_page_info? %>
	<div id="page-info">
		Przy pomocy tej strony możesz dodać nowy turniej.
	</div>
<% end %>

<% form_for(@tournament) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "Nazwa" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "Data rozpoczęcia" %><br />
    <%= f.date_select :start_date, :start_year => 1990,
			:end_year => Date.today.year + 3, :use_month_numbers => true %>
  </p>
  <p>
    <%= f.label "Data zakończenia" %><br />
    <%= f.date_select :end_date, :start_year => 1990,
			:end_year => Date.today.year + 3, :use_month_numbers => true %>
  </p>
  <p>
    <%= f.label "Opis" %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label "Organizator" %><br />
    <%= f.text_field :organizer %>
  </p>
  <p>
    <%= f.submit 'Dodaj' %>
		<%= f.submit 'Dodaj i kontynuuj', :name => 'continue' %>
  </p>
<% end %>

<%= link_to 'Anuluj', tournaments_path %>
